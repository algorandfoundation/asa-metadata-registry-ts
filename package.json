{
  "name": "@algorandfoundation/asa-metadata-registry-sdk",
  "version": "0.1.0",
  "description": "ASA Metadata Registry TypeScript SDK",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/cjs/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist/",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build": "concurrently 'pnpm run build:cjs' 'pnpm run build:esm'",
    "prepublishOnly": "pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/algorandfoundation/asa-metadata-registry-ts.git"
  },
  "author": "Algorand Foundation",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/algorandfoundation/asa-metadata-registry-ts/issues"
  },
  "homepage": "https://github.com/algorandfoundation/asa-metadata-registry-ts#readme",
  "devDependencies": {
    "@algorandfoundation/algokit-client-generator": "^6.0.1",
    "@algorandfoundation/algokit-utils": "^9.2.0",
    "@eslint/js": "^9.18.0",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/coverage-v8": "^4.0.18",
    "algosdk": "^3.5.2",
    "concurrently": "^9.2.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.3.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "@algorandfoundation/algokit-utils": "^9.0.0",
    "algosdk": "^3.0.0"
  },
  "lint-staged": {
    "*.{ts,js,mjs,cjs}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@9.15.4"
}
